{
  // RodMCP File Access Configuration
  // This file configures security controls for file system operations
  // Usage: rodmcp --config config.json

  // allowed_paths: Directory prefixes that are explicitly allowed
  // - Paths are resolved to absolute paths and checked as prefixes
  // - Subdirectories of allowed paths are automatically allowed
  // - Empty list + restrict_to_working_dir=false allows all paths (not recommended)
  "allowed_paths": [
    "/home/user/projects",      // User's development projects
    "/tmp/screenshots",         // Screenshot storage directory
    "/var/www/html",           // Web server document root
    "/opt/myapp/uploads"       // Application upload directory
  ],

  // deny_paths: Directory prefixes that are explicitly denied
  // - Takes precedence over allowed_paths (always blocks access)
  // - Use to protect sensitive system directories
  // - Prevents access even if parent directory is in allowed_paths
  "deny_paths": [
    "/etc",                    // System configuration files
    "/var/log",               // System log files  
    "/root",                  // Root user home directory
    "/proc",                  // Process information filesystem
    "/sys",                   // System information filesystem
    "/home/user/.ssh"         // SSH keys and configuration
  ],

  // restrict_to_working_dir: If true, restricts all access to current working directory
  // - Automatically set to false when allowed_paths is specified via command line
  // - Most secure option for development workflows
  // - Set to false for broader file system access (use with allowed_paths)
  "restrict_to_working_dir": false,

  // allow_temp_files: If true, allows access to system temporary directory
  // - Useful for screenshot storage, temporary file processing
  // - Temp directory path is automatically detected (/tmp on Unix, %TEMP% on Windows)
  // - Consider security implications for multi-user systems
  "allow_temp_files": true,

  // max_file_size: Maximum file size in bytes for file operations
  // - Prevents resource exhaustion from large file operations
  // - Set to 0 to disable file size limits (not recommended)
  // - Common values:
  //   - 1048576 (1MB) - Small files only
  //   - 10485760 (10MB) - Default, suitable for most use cases
  //   - 52428800 (50MB) - Large files, media processing
  //   - 104857600 (100MB) - Very large files
  "max_file_size": 52428800,

  // Additional security notes:
  // 1. Path traversal attacks (../) are automatically prevented
  // 2. Symlinks are resolved to their real paths before validation
  // 3. All paths are converted to absolute paths for consistent checking
  // 4. deny_paths always override allowed_paths for maximum security
  // 5. Configuration precedence: deny_paths > command_line_flags > config_file > defaults

  // Example configurations for different use cases:

  // Development (restrictive):
  // "allowed_paths": ["/home/user/projects"], "restrict_to_working_dir": false, "max_file_size": 10485760

  // Web development (moderate):
  // "allowed_paths": ["/home/user/web", "/var/www", "/tmp"], "allow_temp_files": true, "max_file_size": 50MB

  // Testing/CI (permissive but protected):
  // "allowed_paths": ["/"], "deny_paths": ["/etc", "/root", "/proc", "/sys"], "max_file_size": 100MB
}